@model Eevee.Pages.Songs.DetailsModel

@{
    ViewData["Title"] = "Details";
    string ac_id = User.Claims.Where(c => c.Type == "AccountTypeID").Select(c => c.Value).SingleOrDefault();
    if (ac_id == null)
    {
        ac_id = "2";
    }
}

