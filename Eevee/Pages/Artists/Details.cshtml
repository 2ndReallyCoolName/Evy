@page
@model Eevee.Pages.Artists.DetailsModel

@{
    ViewData["Title"] = "Details";

    string ac_id = User.Claims.Where(c => c.Type == "AccountTypeID").Select(c => c.Value).SingleOrDefault();
    if(ac_id == null)
    {
        ac_id = "2";
    }
}


<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="shortcut icon" href="/assets/favicon.ico">
    <link href="~/css/profile.css" rel="stylesheet" type="text/css">
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

    <h1><div class="title">Artist Profile Page</div></h1>

    <body>
        <div>
            <div class="Profile">
                <div class="data">
                    <div class="col-sm-10">
                        <img src=@Html.DisplayFor(model => model.Artist.Image) class="profile__image">
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Artist.Name)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Artist.StartDate)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Artist.Description)
                    </div>
                    <div class="col-sm-10">
                        <i class="fas fa-headphones-alt"></i> @Html.DisplayFor(model => model.Artist.Listens)

                    </div>
                    <div class="col-sm-10">
                        <i class="far fa-star"></i> @Html.DisplayFor(model => model.Artist.Rating)
                    </div>
                </div>
            </div>
            @if (ac_id == "1")
            {
                <div class="links">
                    <a asp-page="./Edit" asp-route-id="@Model.Artist.ArtistID">Edit</a> |
                    <a asp-page="/songs/create" asp-route-id="@Model.Artist.ArtistID">Upload Song</a> |
                </div>
            }
        <div class="links">
            <a asp-page="/songs/index" asp-route-id="@Model.Artist.ArtistID">View Songs</a>  |
            <a asp-page="./Index">Back to List</a>
        </div>
        </div>

</body>
</html>