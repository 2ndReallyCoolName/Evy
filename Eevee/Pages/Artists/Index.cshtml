@page
@model Eevee.Pages.Artists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<form>
    <p>
        Title: <input type="text" asp-for="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<p>

    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Artist)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ArtistID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ArtistID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ArtistID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
